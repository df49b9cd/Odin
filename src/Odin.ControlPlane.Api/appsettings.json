{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Odin": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "OdinDatabase": "Server=localhost;Database=odin;User Id=odin;Password=odin;"
  },
  "Odin": {
    "Namespace": {
      "DefaultRetentionDays": 30,
      "DefaultRateLimitPerSecond": 100
    },
    "Workflow": {
      "DefaultTaskTimeout": 30,
      "MaxHistoryEventsPerBatch": 1000
    },
    "TaskQueue": {
      "PollTimeout": 60,
      "LeaseTimeout": 30,
      "HeartbeatInterval": 10
    }
  },
  "OpenTelemetry": {
    "Endpoint": "http://localhost:4317",
    "ServiceName": "odin-control-plane-api",
    "ServiceVersion": "1.0.0"
  }
}
